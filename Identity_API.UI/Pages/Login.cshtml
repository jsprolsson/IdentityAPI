@page
@model Identity_API.UI.Pages.LoginModel
@{
}

<form method="post" asp-page-handler="Login">
    <div class="mb-3">
        <div class="form-group row">
            <label for="username" class="col-sm-2 col-form-label">Username </label>
            <div class="col-sm-10">
                <input type="text" id="username" asp-for="LoginUser.UserName">
                <span class="text-warning" asp-validation-for="LoginUser.UserName"></span>
            </div>
        </div>
        <div class="form-group row">
            <label for="password" class="col-sm-2 col-form-label">Password </label>
            <div class="col-sm-10">
                <input type="password" id="password" asp-for="LoginUser.Password">
                <span class="text-warning" asp-validation-for="LoginUser.Password"></span>
            </div>
        </div>
        <input type="submit" class="btn btn-outline-dark" value="Login!"/>
    </div>
</form>

@if(!String.IsNullOrEmpty(Model.Message)) {
    <h2 class="display-4">@Model.Message</h2>
}